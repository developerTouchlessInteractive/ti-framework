{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ]
}